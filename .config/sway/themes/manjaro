# Default Manjaro Sway Configs
#

################----------------THEMING----------------################

 font Fira Mono 9

 default_border pixel 3
 smart_borders on
 smart_gaps on
 gaps inner 6

 # set gnome

 set $gnome-schema org.gnome.desktop.interface
 exec_always {
     gsettings set $gnome-schema gtk-theme 'Adwaita-dark'
     gsettings set $gnome-schema icon-theme 'Adwaita'
     gsettings set $gnome-schema cursor-theme 'xcursor-breeze'
 }

 # exec xrdb ~/.Xresources

 set $grey      #323232
 set $lightgrey #5c5c5c
 set $white     #eff0f1
 set $bg        #31363b
 set $black     #900000
 set $red       #CB4B16

 # Sway theme
 # class                   border     backgr.    text    indic.     child_border
   client.focused          $lightgrey $bg        $white  $lightgrey $lightgrey
   client.focused_inactive $bg        $bg        $white  $bg        $bg
   client.unfocused        $bg        $bg        $white  $bg        $bg
   client.urgent           $red       $red       $white  $black     $black
